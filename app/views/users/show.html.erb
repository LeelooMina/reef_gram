<div class="row">
    <div class="col-12 text-center" style=" padding:20px; background-color: #f2f2f2;">
        <h1><%= @user.username %></h1>

        <h4><%= @user.email %></h4>
        <h1><%= @user.bio %></h1>
        <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, style:"width:200px; height: 200px;" %>
        <% end  %>

        <%= if current_user.following?(@user) %>
            <%= button_to "Unfollow", unfollow_path(@user), class:"btn btn-primary" %>
        <% elsif %>
            <%= button_to "Cancel Request", cancel_path(@user), class:"btn btn-primary" %>
        <% else %>
            <%= button_to "Follow", follow_path(@user), class:"btn btn-primary" %>
        <% end %>
  </div>
</div>
